<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingLeft="15px"
    android:paddingRight="15px">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <ImageView android:id="@+id/youji_img"
            android:layout_width="180px"
            android:layout_height="180px"/>
        <TextView android:id="@+id/youji_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50px"
            android:paddingLeft="20px"
            android:text="与友人一同爬罗浮山，机会难得，且有且珍惜"/>
    </LinearLayout>
    <TextView android:id="@+id/youji_anthor_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海王子1994|2017-03-19发布|2月出游|65张照片"/>
    <TextView android:id="@+id/chapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和两个已经上班的初中同学约好周末爬罗浮山，但周日有急事……"/>
    <TextView android:id="@+id/summarys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:ellipsize="end"
            android:text="和两个已经上班的初中同学约好周末爬罗浮山，但周日有急事……"/>

</LinearLayout>
